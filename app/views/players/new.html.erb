<%= form_for @player do |f| %>
<%= f.text_field :username, placeholder: "username", required: true %>
<%= f.text_field :email, placeholder: "email", required: true %>
<%= f.text_field :password, type: "password", placeholder: "password", required: true %>
<%= f.text_field :password_confirmation, type: "password", placeholder: "confirm password", required: true %>
<%= f.submit "Sign Up" %>
<% end %>